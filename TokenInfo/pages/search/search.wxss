.content{
  /* border:solid red 1px; */
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  text-align: justify;
  font-family: "Microsoft Yahei"
}
.items{
  border-top: solid 1px lightgray;
  /* border-left: solid 1px steelblue;
  border-right: solid 1px steelblue; */
  text-align: left;
  line-height: 60px;
  width: 95%;
  height: 60px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: space-between;
}
/* .items:hover{
  background-color: lightgrey;
} */
.items:last-child{
  border-bottom: solid 1px lightgray;
}
.toolbar{
  /* border-top: solid 1px steelblue;
  border-left: solid 1px steelblue;
  border-right: solid 1px steelblue; */
  text-align: left;
  /* padding-left: 20px;  */
  line-height: 60px;
  width: 95%;
  height: 60px;
  display: flex;
  flex-direction: row;
  font-weight: bold;
  justify-content: space-between;
}
.name{
  width:45%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
}
.price,.cname{
  width:30%;
  font-weight: bold;
  position: relative;
  overflow: hidden;
}
.cname{
  width: 45%;
}
.crate{
  width: 20%;
  font-weight: bold;
  align-self: right;
  position: relative;
}
.rate{
  align-self: center;
  height: 30px;
  line-height: 30px;
  color:white;
  font-size: 0.8em;
  width:20%;
  text-align: center;
  border-radius: 2px;
}
button{
  margin-top:12px;
  width:95%;
  margin-bottom: 12px;
}
page{
  height: 100%;
  width: 100%;
}
.loading{
  /* height: 100%;
  width:100%; */
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
  background-color: whitesmoke;
}
.idxsname{
  font-weight: bold;
}
.idxsname,.market{
  height: 18px;
  line-height: 18px;
  font-size: 0.75em;
}
.market{
  color: grey;
}
.sym{
  height:24px;
  line-height: 24px;
  font-weight: bold;
  font-size: 1.1em;
}
.index,.sname{
  display: inline-block;
  overflow: hidden;
  height:18px;
} 

.toolbar .up{
  position: absolute;
  bottom:14px;
  left: 50px;
  border-top: 6px solid whitesmoke;
  border-right:solid 6px transparent;
  border-left:solid 6px transparent;
  border-bottom: solid 6px transparent;
}
.toolbar .down{
  position: absolute;
  top:14px;
  left: 50px;
  border-top:solid 6px transparent;
  border-right:solid 6px transparent;
  border-left:solid 6px transparent;
  border-bottom: 6px solid whitesmoke;
}
.price .up,.price .down{
  left: 50px;
}
.cname .up,.cname .down{
  left: 50px;
}
input.search{
  border:solid 1px lightgrey;
  border-radius: 3px;
  align-self: flex-end; 
  margin:2px;
  margin-right: 10px;
  margin-top:-5px;
  /* padding-left:25px; */
  /* height: 200px; */
  background-image: url('http://conans.top/static_pics/search.png'); 
  background-repeat: no-repeat;
  background-position: center right;
  background-clip: border-box;
  background-size:11%;
}